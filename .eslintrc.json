{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
		{
			"files": [
				"*.svelte"
			],
			"parser": "svelte-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser"
			}
		}
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": [
			"./tsconfig.json",
			"./tsconfig.node.json"
		],
		"extraFileExtensions": [
			".svelte"
		]
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"arrow-spacing": [
			"warn",
			{
				"after": true,
				"before": true
			}
		],
		"brace-style": [
			"error",
			"allman",
			{
				"allowSingleLine": true
			}
		],
		"comma-spacing": [
			"error",
			{
				"after": true
			}
		],
		"curly": [
			"error",
			"multi-or-nest"
		],
		"dot-location": [
			"error",
			"property"
		],
		"eqeqeq": "error",
		"handle-callback-err": "off",
		"indent": [
			"warn",
			"tab",
			{
				"CallExpression": {
					"arguments": "off"
				},
				"FunctionDeclaration": {
					"body": 1,
					"parameters": "first"
				},
				"FunctionExpression": {
					"body": 1,
					"parameters": "first"
				},
				"ArrayExpression": "first",
				"ObjectExpression": "off",
				"MemberExpression": 0,
				"SwitchCase": 1,
				"VariableDeclarator": "first"
			}
		],
		"@typescript-eslint/no-inferrable-types": 0,
		"no-mixed-spaces-and-tabs": "off",
		"no-console": "off",
		"no-constant-condition": 1,
		"no-empty": "warn",
		"no-empty-function": "warn",
		"no-floating-decimal": "error",
		"no-lonely-if": "off",
		"no-redeclare": 1,
		"no-shadow": [
			"off"
		],
		"no-trailing-spaces": "off",
		"no-undef": "off",
		"no-unreachable": "warn",
		"@typescript-eslint/no-unused-vars": 0,
		"no-var": "warn",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"prefer-const": "off",
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true
			}
		],
		"semi": "error",
		"space-before-blocks": "off",
		"space-before-function-paren": "off",
		"space-in-parens": "off",
		"yoda": "warn"
	}
}