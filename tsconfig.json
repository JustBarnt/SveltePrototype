{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"preserveValueImports": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": false,
		"target": "ESNext",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@controllers/*": [
				"src/scripts/controllers/*",
			],
			"@services/*": [
				"src/scripts/services/*",
			],
			"@requests/*": [
				"src/scripts/requests/*",
			],
			"@stores/*": [
				"src/scripts/stores/*",
			],
			"@utilities/*": [
				"src/scripts/utilities/*",
			],
			"@pages/*": [
				"src/pages/*"
			],
			"@enums/*": [
				"src/enums/*"
			],
			"@sass/*": [
				"src/sass/*"
			]
		}
	},
	"exclude": [
		"node_modules/*",
		"public/*"
	],
	"include": [
		"src/**/*",
		"src/**/*.svelte"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}